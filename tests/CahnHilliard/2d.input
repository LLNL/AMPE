//
// Inspired by PFHub benchmark problem 1a
//
end_time            = 300.
max_delta_cycles    = 500

Visit {
   interval = 50
   interval_type = "step"
}

ModelParameters {

   temperature0 = 1000.

   ConcentrationModel {
      diffusion_type = "mobility"
      model    = "cahn_hilliard"
      rhs_form = "cahn_hilliard"
      CahnHilliard {
         ca = 0.3
         cb = 0.7
         well_scale = 5.
         kappa = 2.
         mobility = 5.
      }
   }
}

ScalarDiagnostics {
   interval = 10.
   interval_type = "time"
}   

Integrator {
   atol = 1.e-4
}

InitialConditions {
   filename = "64x64.nc"  // required
   init_t = 1000.
}

Geometry{
   periodic_dimension = 1, 1
   coarsest_level_resolution = 64, 64
   x_lo         =  0.,   0.   // [um]
   x_up         =  100., 100. // [um]
}

TimerManager {    // optional block, see SAMRAI docs
    timer_list = "solv::*::*","xfer::*::*","AMPE::*::*"
    print_threshold = 0.0
}
