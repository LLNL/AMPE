// Units are:
//   length: um = 10^-6 m
//   energy: pJ = 10^-12 J
//
model_type = "Quat"

max_timesteps       = 30
end_time            = 3.5e-7

Verbosity {  // optional, block
   initial_energy_diagnostics = TRUE  // optional, default=FALSE
}

Visit {
   interval = 10
   interval_type = "step"
   extra_output  = TRUE
}

TimerManager {
    print_threshold = 0.0
}

ModelParameters {

   norderp = 4

   // two grains in phase A
   norderp_A = 3

   temperature = 1000.

   Interface{
      sigma = 1.
      delta = 0.025
   }

//   phi_mobility     = 5.4e3
   phi_mobility     = 5.4e3

   phi_interp_func_type ="pbg"
   avg_func_type = "arithmetic"
   conc_interp_func_type = "lin"

   ConcentrationModel{
      nspecies = 2
      rhs_form = "ebs"
      model    = "quadratic"
      diffusion_type = "temperature_dependent"
      molar_volume_solid_A = 1.e-5 // [m^3/mol]
      molar_volume_solid_B = 1.e-5 // [m^3/mol]
      molar_volume_liquid  = 1.e-5 // [m^3/mol]
//      D_solid_A =  15.e-9 //um**2/s
//      D_liquid  = 15.e-10  // 0.1*D_solid_A
//      D0_LA     = 15.e-7  // 100*D_solid_A
//      D0_AA     = 15.e-8  // 10*D_solid_A
      D_solid_A = 15.e-4  //um**2/s
      D_liquid  = 0.
      D0_LA     = 15.e+0
      D0_AA     = 15.e+2 // artificially high to see pore shrink
      Quadratic {
         T_ref = 1000.
         m_liquid = 0.
         m_solid = 0.
         A_liquid  = 5.e4
         A_solid = 5.e4
         Ceq_liquid  = 0.
         Ceq_solid = 1.
      }
   }

   RigidBody{
      stiffness = 1.
      mobility = 0.5
      threshold = 0.14
      equil_gb = 0.9816
   }
}

Integrator {
   atol = 1.e-4
}

ScalarDiagnostics {
   interval = 10
   interval_type = "step"
   include_first_step = TRUE
   include_last_step  = TRUE
   domain_fraction = 0.35, 0.18, 0.18 // fraction to use for diagnostics
}

InitialConditions {
   filename = "3spheres.nc"
}

Geometry{
   coarsest_level_resolution = 96, 96, 64
   x_lo         =  0.0, 0.0, 0.0 // lower end of computational domain.
   x_up         =  2.4, 2.4, 1.6 // upper end of computational domain.
}
