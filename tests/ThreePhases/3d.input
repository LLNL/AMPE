// Input file
model_type = "Quat"

end_time            = 240.
max_timesteps       = 300

run_name = "test"

Visit {
   interval = 50
   interval_type = "step"
}

TimerManager {
    timer_list = "AMPE::*::*"
    print_threshold = 0.0
}

ModelParameters {

   three_phases = TRUE
   
   Temperature{
      type = "scalar"
      temperature = 1.e-8
   }
   
   epsilon_phi = 1.77669990185572 // sqrt(6.*delta*L*Gamma/Tm)

   phi_mobility = 1.985 // muk*Tm/(6.*delta*L)

   phi_well_scale =  0.022017765260778047 // ((eps/delta)**2)/32

   molar_volume = 1.e-5 // [m^3/mol]

   BoundaryConditions {
       Phase{
         boundary_0 = "slope", "0"
         boundary_1 = "slope", "0"
         boundary_2 = "slope", "0"
         boundary_3 = "slope", "0"
         boundary_4 = "slope", "0"
         boundary_5 = "slope", "0"
      }
   }
}

ScalarDiagnostics {
   interval = 20.
   interval_type = "time"
}   

Integrator {
   atol = 1.e-5
   Preconditioner{
     enabled = FALSE
   }
}

InitialConditions {
   filename = "test.nc"
}

Geometry{
   periodic_dimension = 0, 0, 0
   coarsest_level_resolution = 32, 32, 32
   x_lo         =  0.,   0.,   0.
   x_up         =  100., 100., 100.
}
