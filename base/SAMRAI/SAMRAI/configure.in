      AC_MSG_ERROR([You have specified a non-mpi build but are using an mpi compiler wrapper with is contradictory.])
   fi
else

   if test -z "`echo $CXX:t | grep mpi`" ; then
      case $ARCH in
         alpha)
            CASC_FIND_MPI_ALPHA
         ;;
