  *)
    # PT-SCOTCH install path was specified.
    AC_MSG_CHECKING([for PT-SCOTCH installation])

    if test -f ${with_ptscotch}/include/ptscotch.h; then
        ptscotch_PREFIX=$with_ptscotch
